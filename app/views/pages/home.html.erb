<%if signed_in?%>
	<div class="newpost">
	
		<h1>What's Up?</h1>
		<%= form_for (@micropost) do |f|%>
		 	<%= render 'shared/error_messages', :object => f.object %>
			<div id="newpost">
				<%= f.text_area(:content) %></div>
			<div class="actions">
			<%= submit_tag("Submit") %>
			</div>
		<%end%>
	</div>
	<div class="sidebar round">
		<%= render 'layouts/sidebar', :user => current_user, :gv => true %>
	</div>
	<% unless current_user.microposts.empty? %>
		<div class="microposts">
			<table summary="User microposts">
				<%= render @microposts %>
			</table>
			<%= will_paginate @microposts %>
		</div>
	<%end%>
	
	<%else%>
	<%= render 'signupnow'%>
<%end%>
