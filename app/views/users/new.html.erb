<h1>Sign Up Page</h1>
<%= form_for (@user) do |f|%>
 <%= render 'shared/error_messages' %>
<div class="field">
	<div class="field">
	<%=f.label (:name)%></br>
	<%= f.text_field(:name) %></div>
	<div class="field">
	<%=f.label (:email)%></br>
	<%= f.text_field(:email) %></div>	  
	<div class="field">
	<%=f.label(:password)%></br>
	<%=f.password_field(:password)%></div>
	<div class="field">
	<%= f.label(:password_confirmation, "confirmation") %></br>
	<%=f.password_field(:password_confirmation)%></div>
	<div class="actions">
	<%= submit_tag("Sign Up") %>
	</div>
<%end%>