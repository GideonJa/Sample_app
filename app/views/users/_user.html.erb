<tr>
	<td><%= gravatar_for user, :size => 30 %> </td>
	<td> <%= link_to user.name, user %></td>
	<td> <%= user.email%></td>
	<td> <%= link_to user_path(user), user %></td>
 	<% if (current_user.admin?)%>
		<td> <%= link_to "Delete", user, :method => :delete, 
						:confirm => "You sure you want to delete #{user.name}?",
						:title => "delete #{user.name}"%></td>
   <%end%>

</tr>
