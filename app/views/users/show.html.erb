<h1 class="mainProfile"> 
<%= gravatar_for @user, :size => 60 %>
<%= @user.name%> 
</h1>
<div class="sidebar round">
	<table>
		<tr><th>Name: </th><td> <%= @user.name%></td></tr>
		<tr><th>URL:</th><td id="url"> <%= link_to user_path%> </td></tr>
		<tr><th>Posts:</th><td> <%= @user.microposts.count %> </td></tr>
	</table>
</div>
<% unless @user.microposts.empty? %>
	<div class="microposts">
		<table summary="User microposts">
			<%= render @microposts %>
		</table>
		<%= will_paginate @microposts %>
	</div>
<%end%>